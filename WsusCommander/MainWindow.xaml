<Window x:Class="WsusCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        xmlns:vm="clr-namespace:WsusCommander.ViewModels"
        xmlns:converters="clr-namespace:WsusCommander.Converters"
        xmlns:behaviors="clr-namespace:WsusCommander.Behaviors"
        xmlns:models="clr-namespace:WsusCommander.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="{x:Static p:Resources.AppTitle}"
        Icon="/Resources/app.ico"
        Height="800"
        Width="1200"
        MinHeight="700"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:EmptyStringToVisibilityConverter x:Key="EmptyToVisibility"/>
        <converters:HealthStatusToStringConverter x:Key="HealthStatusToString"/>
        <converters:ToastTypeToColorConverter x:Key="ToastTypeToColor"/>

        <!-- Shared Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle">
                <Setter.Value>
                    <Style>
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Rectangle Stroke="#FF6B00" StrokeThickness="3"
                                               RadiusX="6" RadiusY="6" Margin="-4"
                                               SnapsToDevicePixels="True"
                                               StrokeDashArray="2 1"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Toggle Button Style for Auto-Refresh -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#5D6D7E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Status Value Style -->
        <Style x:Key="StatusValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}"
                             Value="{x:Static p:Resources.StatusDisabled}">
                    <Setter Property="Foreground" Value="#E74C3C"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Health Status Colors -->
        <SolidColorBrush x:Key="HealthyBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="DegradedBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="UnhealthyBrush" Color="#E74C3C"/>
    </Window.Resources>

    <!-- Keyboard Shortcuts -->
    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshUpdatesCommand}"/>
        <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding RefreshUpdatesCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding StartSyncCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExportUpdatesCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding ApproveUpdateCommand}"/>
        <KeyBinding Key="D" Modifiers="Ctrl" Command="{Binding DeclineUpdateCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding DisconnectCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ==================== LOGIN VIEW ==================== -->
        <Grid Grid.Row="0"
              Visibility="{Binding IsConnected, Converter={StaticResource InverseBoolToVisibility}}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20">

                <!-- Header -->
                <TextBlock Text="{x:Static p:Resources.AppTitle}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           AutomationProperties.Name="{x:Static p:Resources.AppTitle}"/>

                <!-- User Info -->
                <TextBlock Text="{Binding CurrentUser.DisplayName}"
                           FontSize="14"
                           Foreground="#5D6D7E"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibility}}"/>

                <TextBlock FontSize="12"
                           Foreground="#27AE60"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibility}}">
                    <Run Text="{x:Static p:Resources.RoleViewer}"/>
                    <Run Text=": "/>
                    <Run Text="{Binding CurrentUser.Role}"/>
                </TextBlock>

                <!-- Connection Settings -->
                <Border Background="#F8F9FA"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20"
                        MinWidth="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Server Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{x:Static p:Resources.LblServerName}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,12"
                                   FontSize="13"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding InputServerName, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10,8"
                                 FontSize="13"
                                 Margin="0,0,0,12"
                                 MinWidth="200"
                                 TabIndex="0"
                                 AutomationProperties.Name="{x:Static p:Resources.LblServerName}"/>

                        <!-- Port -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="{x:Static p:Resources.LblServerPort}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,12"
                                   FontSize="13"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding InputServerPort, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="10,8"
                                 FontSize="13"
                                 Margin="0,0,0,12"
                                 MaxWidth="100"
                                 HorizontalAlignment="Left"
                                 TabIndex="1"
                                 AutomationProperties.Name="{x:Static p:Resources.LblServerPort}"/>

                        <!-- Use SSL -->
                        <CheckBox Grid.Row="2" Grid.Column="1"
                                  Content="{x:Static p:Resources.LblUseSsl}"
                                  IsChecked="{Binding InputUseSsl}"
                                  FontSize="13"
                                  VerticalContentAlignment="Center"
                                  TabIndex="2"
                                  AutomationProperties.Name="{x:Static p:Resources.LblUseSsl}"/>
                    </Grid>
                </Border>

                <!-- Connect Button -->
                <Button Content="{x:Static p:Resources.BtnConnect}"
                        Command="{Binding ConnectWsusCommand}"
                        HorizontalAlignment="Center"
                        MinWidth="220"
                        Padding="24,14"
                        FontSize="15"
                        Background="#3498DB"
                        Style="{StaticResource ActionButtonStyle}"
                        TabIndex="3"
                        AutomationProperties.Name="{x:Static p:Resources.BtnConnect}"/>

                <!-- Loading Indicator (Login) -->
                <ProgressBar IsIndeterminate="True"
                             Height="4"
                             Width="220"
                             Margin="0,20,0,0"
                             Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibility}}"
                             Foreground="#3498DB"
                             Background="#ECF0F1"/>
            </StackPanel>
        </Grid>

        <!-- ==================== DASHBOARD VIEW ==================== -->
        <Grid Grid.Row="0"
              Visibility="{Binding IsConnected, Converter={StaticResource BoolToVisibility}}"
              Margin="20,20,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Dashboard Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Server Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Resources.AppTitle}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static p:Resources.LblServerVersion}"
                               FontSize="12"
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"
                               Margin="20,0,5,0"/>
                    <TextBlock Text="{Binding ServerVersion}"
                               FontSize="12"
                               Foreground="#27AE60"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Export Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center" Margin="0,0,10,0">
                        <MenuItem Header="{x:Static p:Resources.BtnExport}"
                                  Background="#9B59B6"
                                  Foreground="White"
                                  Padding="12,8"
                                  FontSize="12">
                            <MenuItem Header="{x:Static p:Resources.ExportFormatCsv}"
                                      Command="{Binding ExportUpdatesCommand}"
                                      AutomationProperties.Name="{x:Static p:Resources.ExportFormatCsv}"/>
                            <MenuItem Header="{x:Static p:Resources.ExportFormatJson}"
                                      Command="{Binding ExportUpdatesCommand}"
                                      AutomationProperties.Name="{x:Static p:Resources.ExportFormatJson}"/>
                            <Separator/>
                            <MenuItem Header="{x:Static p:Resources.TabComputers}"
                                      Command="{Binding ExportComputersCommand}"/>
                        </MenuItem>
                    </Menu>

                    <!-- Auto-Refresh Toggle -->
                    <ToggleButton Content="{x:Static p:Resources.BtnAutoRefresh}"
                                  IsChecked="{Binding IsAutoRefreshEnabled}"
                                  Command="{Binding ToggleAutoRefreshCommand}"
                                  Style="{StaticResource ToggleButtonStyle}"
                                  Margin="0,0,10,0"
                                  AutomationProperties.Name="{x:Static p:Resources.BtnAutoRefresh}"/>

                    <!-- Refresh Button -->
                    <Button Content="{x:Static p:Resources.BtnRefresh}"
                            Command="{Binding RefreshUpdatesCommand}"
                            Background="#27AE60"
                            Style="{StaticResource ActionButtonStyle}"
                            ToolTip="{x:Static p:Resources.TooltipRefreshShortcut}"
                            AutomationProperties.Name="{x:Static p:Resources.BtnRefresh}"/>
                </StackPanel>
            </Grid>

            <!-- Sync Status and Computer Groups Panel -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Sync Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Resources.LblSyncStatus}"
                               FontSize="12"
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="{Binding SyncStatus.Status}"/>
                                <Setter Property="Foreground" Value="#27AE60"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SyncStatus.IsSyncing}" Value="True">
                                        <Setter Property="Foreground" Value="#3498DB"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="{x:Static p:Resources.LblLastSync}"
                               FontSize="12"
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding SyncStatus.LastSyncTime, StringFormat=g}"
                               FontSize="12"
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <!-- Sync Now Button -->
                    <Button Content="{x:Static p:Resources.BtnStartSync}"
                            Command="{Binding StartSyncCommand}"
                            Background="#9B59B6"
                            Style="{StaticResource SmallButtonStyle}"
                            ToolTip="{x:Static p:Resources.TooltipSyncShortcut}"
                            AutomationProperties.Name="{x:Static p:Resources.BtnStartSync}"/>
                </StackPanel>

                <!-- Computer Groups Selector -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Resources.LblComputerGroups}"
                               FontSize="12"
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding ComputerGroups}"
                              SelectedItem="{Binding SelectedComputerGroup}"
                              DisplayMemberPath="Name"
                              MinWidth="200"
                              Padding="8,6"
                              FontSize="12"
                              AutomationProperties.Name="{x:Static p:Resources.LblComputerGroups}"/>
                </StackPanel>
            </Grid>

            <!-- Search and Filter Bar -->
            <Border Grid.Row="2" Background="White" CornerRadius="4" Padding="15,10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filter Presets -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="{x:Static p:Resources.LblFilterPresets}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontSize="12"
                                   Foreground="#5D6D7E"/>
                        <ComboBox ItemsSource="{Binding FilterPresets}"
                                  SelectedItem="{Binding SelectedFilterPreset}"
                                  DisplayMemberPath="Name"
                                  MinWidth="150"
                                  Padding="8,6"
                                  FontSize="12"
                                  AutomationProperties.Name="{x:Static p:Resources.LblFilterPresets}"/>
                        <Button Content="{x:Static p:Resources.BtnSavePreset}"
                                Command="{Binding SaveFilterPresetCommand}"
                                Background="#3498DB"
                                Style="{StaticResource SmallButtonStyle}"
                                Margin="5,0,0,0"
                                ToolTip="{x:Static p:Resources.BtnSavePreset}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnSavePreset}"/>
                    </StackPanel>

                    <!-- Search Box with Placeholder -->
                    <Grid Grid.Column="1" Margin="0,0,10,0">
                        <TextBox x:Name="SearchTextBox"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                 Style="{StaticResource SearchTextBoxStyle}"
                                 TabIndex="0"
                                 AutomationProperties.Name="{x:Static p:Resources.LblSearch}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Return" Command="{Binding ApplySearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <TextBlock Text="{x:Static p:Resources.PlaceholderSearch}"
                                   Foreground="#AAAAAA"
                                   FontSize="12"
                                   Margin="10,8,0,0"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding SearchText, Converter={StaticResource EmptyToVisibility}}"/>
                    </Grid>

                    <!-- Classification Filter -->
                    <ComboBox Grid.Column="3"
                              ItemsSource="{Binding Classifications}"
                              SelectedItem="{Binding SelectedClassification}"
                              MinWidth="150"
                              Padding="8,6"
                              FontSize="12"
                              Margin="0,0,10,0"
                              TabIndex="2"
                              AutomationProperties.Name="{x:Static p:Resources.LblFilter}">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Style.Triggers>
                                    <Trigger Property="SelectedItem" Value="{x:Null}">
                                        <Setter Property="Background" Value="#ECF0F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Superseded Filter -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                        <TextBlock Text="{x:Static p:Resources.LblSupersededFilter}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontSize="12"
                                   Foreground="#5D6D7E"/>
                        <ComboBox ItemsSource="{Binding SupersededFilters}"
                                  SelectedItem="{Binding SelectedSupersededFilter}"
                                  MinWidth="150"
                                  Padding="8,6"
                                  FontSize="12"
                                  TabIndex="1"
                                  AutomationProperties.Name="{x:Static p:Resources.LblSupersededFilter}"/>
                    </StackPanel>

                    <!-- Approval Status Filter -->
                    <ComboBox Grid.Column="4"
                              ItemsSource="{Binding ApprovalFilters}"
                              SelectedItem="{Binding SelectedApprovalFilter}"
                              MinWidth="120"
                              Padding="8,6"
                              FontSize="12"
                              Margin="0,0,10,0"
                              TabIndex="3"
                              AutomationProperties.Name="{x:Static p:Resources.LblFilter}"/>

                    <!-- Clear Filter Button -->
                    <Button Grid.Column="5"
                            Content="{x:Static p:Resources.BtnClearFilter}"
                            Command="{Binding ClearFiltersCommand}"
                            Background="#7B8D8E"
                            Style="{StaticResource SmallButtonStyle}"
                            Margin="0,0,10,0"
                            TabIndex="4"
                            AutomationProperties.Name="{x:Static p:Resources.BtnClearFilter}"/>

                    <!-- Bulk Operations Buttons -->
                    <StackPanel Grid.Column="6" Orientation="Horizontal">
                        <Button Content="{x:Static p:Resources.BtnBulkApprove}"
                                Command="{Binding BulkApproveCommand}"
                                Background="#27AE60"
                                Style="{StaticResource SmallButtonStyle}"
                                Margin="0,0,5,0"
                                Visibility="{Binding CanUserApprove, Converter={StaticResource BoolToVisibility}}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnBulkApprove}"/>
                        <Button Content="{x:Static p:Resources.BtnBulkDecline}"
                                Command="{Binding BulkDeclineCommand}"
                                Background="#E74C3C"
                                Style="{StaticResource SmallButtonStyle}"
                                Visibility="{Binding CanUserDecline, Converter={StaticResource BoolToVisibility}}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnBulkDecline}"/>

                        <!-- Quick Actions Separator -->
                        <Separator Margin="10,0" Background="#E0E0E0"/>

                        <!-- One-Click Actions -->
                        <Button Content="{x:Static p:Resources.BtnDeclineSuperseded}"
                                Command="{Binding DeclineAllSupersededCommand}"
                                Background="#E67E22"
                                Style="{StaticResource SmallButtonStyle}"
                                Margin="0,0,5,0"
                                ToolTip="{x:Static p:Resources.TipSuperseded}"
                                Visibility="{Binding CanUserDecline, Converter={StaticResource BoolToVisibility}}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnDeclineSuperseded}"/>
                        <Button Content="{x:Static p:Resources.BtnApproveCritical}"
                                Command="{Binding ApproveAllCriticalCommand}"
                                Background="#C0392B"
                                Style="{StaticResource SmallButtonStyle}"
                                Margin="0,0,5,0"
                                Visibility="{Binding CanUserApprove, Converter={StaticResource BoolToVisibility}}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnApproveCritical}"/>
                        <Button Content="{x:Static p:Resources.BtnApproveSecurity}"
                                Command="{Binding ApproveAllSecurityCommand}"
                                Background="#8E44AD"
                                Style="{StaticResource SmallButtonStyle}"
                                Visibility="{Binding CanUserApprove, Converter={StaticResource BoolToVisibility}}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnApproveSecurity}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Bulk Operation Progress -->
            <Grid Grid.Row="3" Margin="0,0,0,10" Visibility="{Binding IsBulkOperationRunning, Converter={StaticResource BoolToVisibility}}">
                <ProgressBar Value="{Binding BulkProgress}"
                             Maximum="100"
                             Height="20"
                             Foreground="#3498DB"/>
                <TextBlock Text="{Binding BulkProgressText}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="#2C3E50"/>
            </Grid>

            <!-- Loading Indicator (Dashboard) -->
            <ProgressBar Grid.Row="3"
                         IsIndeterminate="True"
                         Height="3"
                         Margin="0,0,0,10"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                         Foreground="#3498DB"
                         Background="#ECF0F1"/>

            <!-- Tab Control for Updates, Computers, Reports, and Groups -->
            <TabControl Grid.Row="4"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        SelectedIndex="{Binding SelectedTabIndex}"
                        KeyboardNavigation.TabNavigation="Cycle">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="#5D6D7E"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <!-- Dashboard Tab -->
                <TabItem Header="{x:Static p:Resources.TabDashboard}" AutomationProperties.Name="{x:Static p:Resources.TabDashboard}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="{x:Static p:Resources.DashboardTitle}"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"
                                           VerticalAlignment="Center"/>
                                <Button Content="{x:Static p:Resources.BtnRefresh}"
                                        Command="{Binding LoadDashboardCommand}"
                                        Background="#3498DB"
                                        Style="{StaticResource SmallButtonStyle}"
                                        Margin="20,0,0,0"
                                        AutomationProperties.Name="{x:Static p:Resources.BtnRefresh}"/>
                            </StackPanel>

                            <!-- Update Statistics -->
                            <GroupBox Grid.Row="1" Header="{x:Static p:Resources.DashboardUpdateStats}" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Total Updates -->
                                    <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardTotalUpdates}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.TotalUpdates, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#2C3E50"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Unapproved -->
                                    <Border Grid.Column="1" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardUnapproved}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.UnapprovedUpdates, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#E67E22"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Superseded -->
                                    <Border Grid.Column="2" Background="#F3E5F5" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardSuperseded}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.SupersededUpdates, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#8E44AD"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Critical Pending -->
                                    <Border Grid.Column="3" Background="#FFEBEE" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardCriticalPending}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.CriticalPending, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#C0392B"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Security Pending -->
                                    <Border Grid.Column="4" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardSecurityPending}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.SecurityPending, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#27AE60"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </GroupBox>

                            <!-- Computer Statistics -->
                            <GroupBox Grid.Row="2" Header="{x:Static p:Resources.DashboardComputerStats}" Margin="0,0,0,15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Total Computers -->
                                    <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardTotalComputers}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.TotalComputers, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#2C3E50"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Needing Updates -->
                                    <Border Grid.Column="1" Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardNeedingUpdates}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.ComputersNeedingUpdates, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#E67E22"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Up to Date -->
                                    <Border Grid.Column="2" Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardUpToDate}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.ComputersUpToDate, FallbackValue=0}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#27AE60"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Compliance -->
                                    <Border Grid.Column="3" CornerRadius="8" Padding="15" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DashboardStats.CompliancePercent, Converter={StaticResource NullToVisibility}}" Value="Collapsed">
                                                        <Setter Property="Background" Value="#F8F9FA"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{x:Static p:Resources.DashboardCompliance}"
                                                       FontSize="11"
                                                       Foreground="#5D6D7E"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding DashboardStats.CompliancePercent, StringFormat={}{0:F1}%, FallbackValue=0%}"
                                                       FontSize="32"
                                                       FontWeight="Bold"
                                                       Foreground="#27AE60"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </GroupBox>

                            <!-- Visual Statistics -->
                            <Grid Grid.Row="3" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Compliance Gauge -->
                                <GroupBox Grid.Column="0" Header="{x:Static p:Resources.DashboardCompliance}" Margin="0,0,10,0">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Progress Bar as Gauge -->
                                        <ProgressBar Grid.Row="0"
                                                     Value="{Binding DashboardStats.CompliancePercent, FallbackValue=0}"
                                                     Maximum="100"
                                                     Height="30"
                                                     Foreground="#27AE60"
                                                     Background="#ECF0F1"/>

                                        <!-- Percentage Overlay -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding DashboardStats.CompliancePercent, StringFormat={}{0:F1}%, FallbackValue=0%}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#2C3E50"/>

                                        <!-- Legend -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                            <Ellipse Width="12" Height="12" Fill="#27AE60" Margin="0,0,5,0"/>
                                            <TextBlock Text="{x:Static p:Resources.DashboardUpToDate}" FontSize="11" Foreground="#5D6D7E" Margin="0,0,20,0"/>
                                            <Ellipse Width="12" Height="12" Fill="#E67E22" Margin="0,0,5,0"/>
                                            <TextBlock Text="{x:Static p:Resources.DashboardNeedingUpdates}" FontSize="11" Foreground="#5D6D7E"/>
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>

                                <!-- Update Distribution -->
                                <GroupBox Grid.Column="1" Header="{x:Static p:Resources.DashboardUpdateDistribution}" Margin="10,0,0,0">
                                    <StackPanel Margin="15">
                                        <!-- Critical -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Static p:Resources.DashboardCriticalPending}" FontSize="11" VerticalAlignment="Center"/>
                                            <ProgressBar Grid.Column="1" Height="16" Background="#FFEBEE" Foreground="#C0392B"
                                                         Value="{Binding DashboardStats.CriticalPending, FallbackValue=0}"
                                                         Maximum="{Binding DashboardStats.TotalUpdates, FallbackValue=1}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DashboardStats.CriticalPending, FallbackValue=0}"
                                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Security -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Static p:Resources.DashboardSecurityPending}" FontSize="11" VerticalAlignment="Center"/>
                                            <ProgressBar Grid.Column="1" Height="16" Background="#E8F5E9" Foreground="#27AE60"
                                                         Value="{Binding DashboardStats.SecurityPending, FallbackValue=0}"
                                                         Maximum="{Binding DashboardStats.TotalUpdates, FallbackValue=1}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DashboardStats.SecurityPending, FallbackValue=0}"
                                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Unapproved -->
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Static p:Resources.DashboardUnapproved}" FontSize="11" VerticalAlignment="Center"/>
                                            <ProgressBar Grid.Column="1" Height="16" Background="#FFF3E0" Foreground="#E67E22"
                                                         Value="{Binding DashboardStats.UnapprovedUpdates, FallbackValue=0}"
                                                         Maximum="{Binding DashboardStats.TotalUpdates, FallbackValue=1}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DashboardStats.UnapprovedUpdates, FallbackValue=0}"
                                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Superseded -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{x:Static p:Resources.DashboardSuperseded}" FontSize="11" VerticalAlignment="Center"/>
                                            <ProgressBar Grid.Column="1" Height="16" Background="#F3E5F5" Foreground="#8E44AD"
                                                         Value="{Binding DashboardStats.SupersededUpdates, FallbackValue=0}"
                                                         Maximum="{Binding DashboardStats.TotalUpdates, FallbackValue=1}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding DashboardStats.SupersededUpdates, FallbackValue=0}"
                                                       FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>

                            <!-- Operational and Security Overview -->
                            <Grid Grid.Row="4" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <GroupBox Grid.Column="0" Header="{x:Static p:Resources.DashboardOperationalInsights}" Margin="0,0,10,0">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static p:Resources.LblServerName}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ServerName}" Foreground="#2C3E50"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Resources.LblServerVersion}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ServerVersion, FallbackValue=-}" Foreground="#2C3E50"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static p:Resources.DashboardLastSync}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DashboardLastSyncDisplay}" Foreground="#2C3E50"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static p:Resources.DashboardSyncAge}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DashboardSyncAgeDisplay}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DashboardSyncStale}" Value="True">
                                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static p:Resources.DashboardHealth}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DashboardHealthStatusDisplay}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#7B8D8E"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HealthReport.Status}" Value="Healthy">
                                                            <Setter Property="Foreground" Value="#27AE60"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthReport.Status}" Value="Degraded">
                                                            <Setter Property="Foreground" Value="#F39C12"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthReport.Status}" Value="Unhealthy">
                                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="{x:Static p:Resources.DashboardAutoRefresh}" Foreground="#5D6D7E" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DashboardAutoRefreshDisplay}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAutoRefreshEnabled}" Value="False">
                                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Grid.Column="1" Header="{x:Static p:Resources.DashboardSecurityAccess}" Margin="10,0,0,0">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static p:Resources.DashboardUserRole}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DashboardUserRoleDisplay}" Foreground="#2C3E50"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Resources.DashboardAuthenticationRequired}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DashboardAuthStatusDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static p:Resources.DashboardApprovalConfirmation}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DashboardApprovalConfirmationDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static p:Resources.DashboardDeclineConfirmation}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DashboardDeclineConfirmationDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static p:Resources.DashboardSyncConfirmation}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DashboardSyncConfirmationDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="{x:Static p:Resources.DashboardAuditLogging}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DashboardAuditStatusDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="{x:Static p:Resources.DashboardSslStatus}" Foreground="#5D6D7E" Margin="0,0,10,6"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding DashboardSslStatusDisplay}" Style="{StaticResource StatusValueTextStyle}"/>

                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="{x:Static p:Resources.DashboardCertificateValidation}" Foreground="#5D6D7E" Margin="0,0,10,0"/>
                                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding DashboardCertificateValidationDisplay}" Style="{StaticResource StatusValueTextStyle}"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>

                            <!-- Action Required -->
                            <GroupBox Grid.Row="5" Header="{x:Static p:Resources.DashboardActionRequired}" Margin="0,0,0,15">
                                <StackPanel Margin="10">
                                    <TextBlock Text="{x:Static p:Resources.DashboardNoActionRequired}"
                                               Foreground="#7B8D8E"
                                               Visibility="{Binding HasDashboardActions, Converter={StaticResource InverseBoolToVisibility}}"/>

                                    <Border Background="#FFEBEE" CornerRadius="6" Padding="12" Margin="0,0,0,10"
                                            Visibility="{Binding HasCriticalAction, Converter={StaticResource BoolToVisibility}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{x:Static p:Resources.DashboardCriticalPending}" FontWeight="SemiBold" Foreground="#C0392B"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DashboardStats.CriticalPending, FallbackValue=0}" Foreground="#2C3E50" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{x:Static p:Resources.DashboardPendingLabel}" Foreground="#7B8D8E" Margin="6,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="{x:Static p:Resources.DashboardActionReviewUpdates}"
                                                    Command="{Binding ReviewCriticalUpdatesCommand}"
                                                    Background="#C0392B"
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#F3E5F5" CornerRadius="6" Padding="12" Margin="0,0,0,10"
                                            Visibility="{Binding HasSecurityAction, Converter={StaticResource BoolToVisibility}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{x:Static p:Resources.DashboardSecurityPending}" FontWeight="SemiBold" Foreground="#8E44AD"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DashboardStats.SecurityPending, FallbackValue=0}" Foreground="#2C3E50" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{x:Static p:Resources.DashboardPendingLabel}" Foreground="#7B8D8E" Margin="6,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="{x:Static p:Resources.DashboardActionReviewUpdates}"
                                                    Command="{Binding ReviewSecurityUpdatesCommand}"
                                                    Background="#8E44AD"
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#FFF3E0" CornerRadius="6" Padding="12" Margin="0,0,0,10"
                                            Visibility="{Binding HasSupersededAction, Converter={StaticResource BoolToVisibility}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{x:Static p:Resources.DashboardSuperseded}" FontWeight="SemiBold" Foreground="#E67E22"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding DashboardStats.SupersededUpdates, FallbackValue=0}" Foreground="#2C3E50" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{x:Static p:Resources.DashboardReadyLabel}" Foreground="#7B8D8E" Margin="6,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="{x:Static p:Resources.DashboardActionReviewSuperseded}"
                                                    Command="{Binding ReviewSupersededUpdatesCommand}"
                                                    Background="#E67E22"
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#E8F4FD" CornerRadius="6" Padding="12" Margin="0,0,0,10"
                                            Visibility="{Binding HasSyncAction, Converter={StaticResource BoolToVisibility}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{x:Static p:Resources.DashboardLastSync}" FontWeight="SemiBold" Foreground="#3498DB"/>
                                                <TextBlock Text="{Binding DashboardLastSyncDisplay}" Foreground="#7B8D8E"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="{x:Static p:Resources.DashboardActionStartSync}"
                                                    Command="{Binding StartSyncCommand}"
                                                    Background="#3498DB"
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <Border Background="#F8F9FA" CornerRadius="6" Padding="12"
                                            Visibility="{Binding HasComplianceAction, Converter={StaticResource BoolToVisibility}}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{x:Static p:Resources.DashboardCompliance}" FontWeight="SemiBold" Foreground="#5D6D7E"/>
                                                <TextBlock Text="{Binding DashboardStats.CompliancePercent, StringFormat={}{0:F1}%}" Foreground="#7B8D8E"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="{x:Static p:Resources.DashboardActionOpenReports}"
                                                    Command="{Binding OpenComplianceReportsCommand}"
                                                    Background="#7B8D8E"
                                                    Style="{StaticResource SmallButtonStyle}"
                                                    Margin="10,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </GroupBox>

                            <!-- Quick Actions -->
                            <GroupBox Grid.Row="6" Header="{x:Static p:Resources.DashboardQuickActions}">
                                <StackPanel Margin="10" Orientation="Horizontal">
                                    <Button Content="{x:Static p:Resources.BtnDeclineSuperseded}"
                                            Command="{Binding DeclineAllSupersededCommand}"
                                            Background="#E67E22"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Margin="0,0,10,0"
                                            Visibility="{Binding CanUserDecline, Converter={StaticResource BoolToVisibility}}"
                                            AutomationProperties.Name="{x:Static p:Resources.BtnDeclineSuperseded}"/>
                                    <Button Content="{x:Static p:Resources.BtnApproveCritical}"
                                            Command="{Binding ApproveAllCriticalCommand}"
                                            Background="#C0392B"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Margin="0,0,10,0"
                                            Visibility="{Binding CanUserApprove, Converter={StaticResource BoolToVisibility}}"
                                            AutomationProperties.Name="{x:Static p:Resources.BtnApproveCritical}"/>
                                    <Button Content="{x:Static p:Resources.BtnApproveSecurity}"
                                            Command="{Binding ApproveAllSecurityCommand}"
                                            Background="#8E44AD"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Margin="0,0,10,0"
                                            Visibility="{Binding CanUserApprove, Converter={StaticResource BoolToVisibility}}"
                                            AutomationProperties.Name="{x:Static p:Resources.BtnApproveSecurity}"/>
                                    <Button Content="{x:Static p:Resources.BtnStartSync}"
                                            Command="{Binding StartSyncCommand}"
                                            Background="#3498DB"
                                            Style="{StaticResource ActionButtonStyle}"
                                            AutomationProperties.Name="{x:Static p:Resources.BtnStartSync}"/>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Updates Tab -->
                <TabItem Header="{x:Static p:Resources.TabUpdates}" AutomationProperties.Name="{x:Static p:Resources.TabUpdates}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Loading Indicator Overlay -->
                        <Border Grid.Row="0"
                                Background="#B3FFFFFF"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                                Panel.ZIndex="100">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="Visibility" Value="Visible">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0" To="1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True"
                                             Width="200"
                                             Height="4"
                                             Margin="0,0,0,10"/>
                                <TextBlock Text="{x:Static p:Resources.StatusLoading}"
                                           HorizontalAlignment="Center"
                                           Foreground="#2C3E50"
                                           FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <DataGrid Grid.Row="0"
                                  ItemsSource="{Binding FilteredUpdates}"
                                  SelectedItem="{Binding SelectedUpdate}"
                                  behaviors:DataGridSelectedItemsBehavior.SelectedItems="{Binding SelectedUpdates}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Extended"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  Background="White"
                                  BorderThickness="0"
                                  RowHeight="32"
                                  HeadersVisibility="Column"
                                  AutomationProperties.Name="{x:Static p:Resources.TabUpdates}">

                            <!-- Context Menu -->
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="{x:Static p:Resources.MenuApprove}"
                                              Command="{Binding ApproveUpdateCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuApprove}"/>
                                    <MenuItem Header="{x:Static p:Resources.MenuDecline}"
                                              Command="{Binding DeclineUpdateCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuDecline}"/>
                                    <Separator/>
                                    <MenuItem Header="{x:Static p:Resources.BtnViewDetails}"
                                              Command="{Binding ViewUpdateDetailsCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.BtnViewDetails}"/>
                                    <Separator/>
                                    <MenuItem Header="{x:Static p:Resources.MenuCopyKB}"
                                              Command="{Binding CopyKbArticleCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuCopyKB}"/>
                                    <MenuItem Header="{x:Static p:Resources.MenuSearchKB}"
                                              Command="{Binding SearchKbOnlineCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuSearchKB}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="AutomationProperties.Name"
                                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#1E88E5"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#1565C0"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EBEBEB"/>
                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColTitle}"
                                                    Binding="{Binding Title}"
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding Title}"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColKB}"
                                                    Binding="{Binding KbArticle}"
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColClassification}"
                                                    Binding="{Binding Classification}"
                                                    Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColDate}"
                                                    Binding="{Binding CreationDate, StringFormat=d}"
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="{x:Static p:Resources.ColApproved}"
                                                        Binding="{Binding IsApproved, Mode=OneWay}"
                                                        Width="80">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                                <DataGridCheckBoxColumn Header="{x:Static p:Resources.ColDeclined}"
                                                        Binding="{Binding IsDeclined, Mode=OneWay}"
                                                        Width="80">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Controls -->
                        <Border Grid.Row="1" Background="#F8F9FA" Padding="10,8" Margin="0,5,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Page Size Selector -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Static p:Resources.LblPageSize}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               FontSize="12"
                                               Foreground="#5D6D7E"/>
                                    <ComboBox ItemsSource="{Binding PageSizes}"
                                              SelectedItem="{Binding PageSize}"
                                              MinWidth="60"
                                              Padding="6,4"
                                              FontSize="12"/>
                                </StackPanel>

                                <!-- Pagination Info -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding PaginationInfo}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           Foreground="#5D6D7E"/>

                                <!-- Navigation Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="{x:Static p:Resources.BtnFirstPage}"
                                            Command="{Binding FirstPageCommand}"
                                            Style="{StaticResource SmallButtonStyle}"
                                            Background="#7B8D8E"
                                            Margin="0,0,5,0"
                                            Padding="12,8"
                                            MinHeight="36"
                                            FontSize="11"/>
                                    <Button Content="{x:Static p:Resources.BtnPreviousPage}"
                                            Command="{Binding PreviousPageCommand}"
                                            Style="{StaticResource SmallButtonStyle}"
                                            Background="#7B8D8E"
                                            Margin="0,0,5,0"
                                            Padding="12,8"
                                            MinHeight="36"
                                            FontSize="11"/>
                                    <Button Content="{x:Static p:Resources.BtnNextPage}"
                                            Command="{Binding NextPageCommand}"
                                            Style="{StaticResource SmallButtonStyle}"
                                            Background="#7B8D8E"
                                            Margin="0,0,5,0"
                                            Padding="12,8"
                                            MinHeight="36"
                                            FontSize="11"/>
                                    <Button Content="{x:Static p:Resources.BtnLastPage}"
                                            Command="{Binding LastPageCommand}"
                                            Style="{StaticResource SmallButtonStyle}"
                                            Background="#7B8D8E"
                                            Padding="12,8"
                                            MinHeight="36"
                                            FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Update Details Panel -->
                        <Border Grid.Row="2"
                                Background="#F8F9FA"
                                Padding="15,10"
                                Margin="0,10,0,0"
                                Visibility="{Binding SelectedUpdateDetails, Converter={StaticResource NullToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontWeight="SemiBold" Text="{x:Static p:Resources.LblSeverity}"/>
                                    <TextBlock Text="{Binding SelectedUpdateDetails.Severity}" Margin="0,0,0,10"/>
                                    <TextBlock FontWeight="SemiBold" Text="{x:Static p:Resources.LblRequiresReboot}"/>
                                    <TextBlock Text="{Binding SelectedUpdateDetails.RequiresReboot}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock FontWeight="SemiBold" Text="{x:Static p:Resources.LblReleaseDate}"/>
                                    <TextBlock Text="{Binding SelectedUpdateDetails.ArrivalDate, StringFormat=d}" Margin="0,0,0,10"/>
                                    <TextBlock FontWeight="SemiBold" Text="{x:Static p:Resources.LblSuperseded}"/>
                                    <TextBlock Text="{Binding SelectedUpdateDetails.IsSuperseded}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock FontWeight="SemiBold" Text="{x:Static p:Resources.ColDescription}"/>
                                    <TextBlock Text="{Binding SelectedUpdateDetails.Description}"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Computers Tab -->
                <TabItem Header="{x:Static p:Resources.TabComputers}" AutomationProperties.Name="{x:Static p:Resources.TabComputers}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Load Computers Button -->
                        <Button Grid.Row="0"
                                Content="{x:Static p:Resources.BtnRefresh}"
                                Command="{Binding LoadComputerStatusesCommand}"
                                HorizontalAlignment="Left"
                                Margin="10,10,10,10"
                                Background="#3498DB"
                                Style="{StaticResource ActionButtonStyle}"
                                AutomationProperties.Name="{x:Static p:Resources.BtnRefresh}"/>

                        <!-- Loading Indicator Overlay -->
                        <Border Grid.Row="1"
                                Background="#B3FFFFFF"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"
                                Panel.ZIndex="100">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="Visibility" Value="Visible">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0" To="1" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar IsIndeterminate="True"
                                             Width="200"
                                             Height="4"
                                             Margin="0,0,0,10"/>
                                <TextBlock Text="{x:Static p:Resources.StatusLoading}"
                                           HorizontalAlignment="Center"
                                           Foreground="#2C3E50"
                                           FontSize="13"/>
                            </StackPanel>
                        </Border>

                        <!-- Computers DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding FilteredComputerStatuses}"
                                  SelectedItem="{Binding SelectedComputer}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  Background="White"
                                  BorderThickness="0"
                                  RowHeight="32"
                                  HeadersVisibility="Column"
                                  AutomationProperties.Name="{x:Static p:Resources.TabComputers}">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="{x:Static p:Resources.MenuViewUpdates}"
                                              Command="{Binding ViewComputerUpdatesCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuViewUpdates}"/>
                                    <Separator/>
                                    <MenuItem Header="{x:Static p:Resources.MenuRefreshStatus}"
                                              Command="{Binding LoadComputerStatusesCommand}"
                                              AutomationProperties.Name="{x:Static p:Resources.MenuRefreshStatus}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="AutomationProperties.Name"
                                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#1E88E5"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#1565C0"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EBEBEB"/>
                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColComputerName}"
                                                    Binding="{Binding Name}"
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding Name}"/>
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColIpAddress}"
                                                    Binding="{Binding IpAddress}"
                                                    Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColGroup}"
                                                    Binding="{Binding GroupName}"
                                                    Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColInstalled}"
                                                    Binding="{Binding InstalledCount}"
                                                    Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColNeeded}"
                                                    Binding="{Binding NeededCount}"
                                                    Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#F39C12"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColFailed}"
                                                    Binding="{Binding FailedCount}"
                                                    Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColLastReport}"
                                                    Binding="{Binding LastReportedTime, StringFormat=g}"
                                                    Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="10,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Reports Tab -->
                <TabItem Header="{x:Static p:Resources.TabReports}" AutomationProperties.Name="{x:Static p:Resources.TabReports}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Report Actions -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="{x:Static p:Resources.BtnGenerateReport}"
                                    Command="{Binding GenerateComplianceReportCommand}"
                                    Background="#3498DB"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Margin="0,0,10,0"
                                    AutomationProperties.Name="{x:Static p:Resources.BtnGenerateReport}"/>
                            <Button Content="{x:Static p:Resources.BtnExport}"
                                    Command="{Binding ExportComplianceReportCommand}"
                                    Background="#9B59B6"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Margin="0,0,10,0"
                                    AutomationProperties.Name="{x:Static p:Resources.BtnExport}"/>
                            <TextBlock Text="{Binding ComplianceReport.CompliancePercent, StringFormat=Compliance: {0:F1}%, FallbackValue='No report'}"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"/>
                        </StackPanel>

                        <!-- Compliance Summary -->
                        <Border Grid.Row="1" Background="White" CornerRadius="4" Padding="15" Margin="0,0,0,15"
                                Visibility="{Binding ComplianceReport, Converter={StaticResource NullToVisibility}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{x:Static p:Resources.ReportCompliance}"
                                               FontSize="12"
                                               Foreground="#5D6D7E"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ComplianceReport.CompliancePercent, StringFormat={}{0:F1}%}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#27AE60"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="{x:Static p:Resources.ColTotal}"
                                               FontSize="12"
                                               Foreground="#5D6D7E"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ComplianceReport.TotalComputers}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="{x:Static p:Resources.StatusCompliant}"
                                               FontSize="12"
                                               Foreground="#5D6D7E"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ComplianceReport.CompliantComputers}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#27AE60"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="{x:Static p:Resources.StatusNonCompliant}"
                                               FontSize="12"
                                               Foreground="#5D6D7E"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding ComplianceReport.NonCompliantComputers}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#E74C3C"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Stale Computers Grid -->
                        <GroupBox Grid.Row="2" Header="{x:Static p:Resources.ReportStaleComputers}" Padding="10">
                            <DataGrid ItemsSource="{Binding StaleComputers}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#E0E0E0"
                                      Background="White"
                                      BorderThickness="0"
                                      RowHeight="28"
                                      AutomationProperties.Name="{x:Static p:Resources.ReportStaleComputers}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{x:Static p:Resources.ColComputerName}" Binding="{Binding ComputerName}" Width="*"/>
                                    <DataGridTextColumn Header="{x:Static p:Resources.ColLastReport}" Binding="{Binding LastReportTime, StringFormat=g}" Width="150"/>
                                    <DataGridTextColumn Header="{x:Static p:Resources.ColDaysSinceReport}" Binding="{Binding DaysSinceLastReport}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <!-- Activity Tab -->
                <TabItem Header="{x:Static p:Resources.TabActivity}" AutomationProperties.Name="{x:Static p:Resources.TabActivity}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="{x:Static p:Resources.TabActivity}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center"/>
                            <Button Content="{x:Static p:Resources.BtnRefresh}"
                                    Command="{Binding LoadActivityLogCommand}"
                                    Background="#3498DB"
                                    Style="{StaticResource SmallButtonStyle}"
                                    Margin="15,0,0,0"
                                    AutomationProperties.Name="{x:Static p:Resources.BtnRefresh}"/>
                        </StackPanel>

                        <!-- Activity DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding ActivityLog}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  RowHeight="32"
                                  HeadersVisibility="Column"
                                  AutomationProperties.Name="{x:Static p:Resources.TabActivity}">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActivityType}" Value="Error">
                                            <Setter Property="Background" Value="#FFEBEE"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ActivityType}" Value="Approval">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ActivityType}" Value="Decline">
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EBEBEB"/>
                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColTimestamp}"
                                                    Binding="{Binding Timestamp, StringFormat='{}{0:g}'}"
                                                    Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColActivityType}"
                                                    Binding="{Binding ActivityType}"
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColTarget}"
                                                    Binding="{Binding Target}"
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding Target}"/>
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColUser}"
                                                    Binding="{Binding User}"
                                                    Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColStatus}"
                                                    Binding="{Binding Status}"
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Rules Tab -->
                <TabItem Header="{x:Static p:Resources.TabRules}" AutomationProperties.Name="{x:Static p:Resources.TabRules}">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{x:Static p:Resources.TabRules}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2C3E50"
                                       VerticalAlignment="Center"/>
                            <Button Content="{x:Static p:Resources.BtnDeleteRule}"
                                    Command="{Binding DeleteRuleCommand}"
                                    Background="#E74C3C"
                                    Style="{StaticResource SmallButtonStyle}"
                                    Margin="15,0,0,0"
                                    Visibility="{Binding SelectedRule, Converter={StaticResource NullToVisibility}}"
                                    AutomationProperties.Name="{x:Static p:Resources.BtnDeleteRule}"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1"
                                   Text="{x:Static p:Resources.RulesDescription}"
                                   Foreground="#5D6D7E"
                                   FontSize="12"
                                   Margin="0,0,0,15"/>

                        <!-- Rules DataGrid -->
                        <DataGrid Grid.Row="2"
                                  ItemsSource="{Binding ApprovalRules}"
                                  SelectedItem="{Binding SelectedRule}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  RowHeight="36"
                                  HeadersVisibility="Column"
                                  AutomationProperties.Name="{x:Static p:Resources.TabRules}">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EBEBEB"/>
                                            <Setter Property="BorderBrush" Value="#3498DB"/>
                                            <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                            <Setter Property="Foreground" Value="#0D47A1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColPriority}"
                                                    Binding="{Binding Priority}"
                                                    Width="70">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColRuleName}"
                                                    Binding="{Binding Name}"
                                                    Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColCondition}"
                                                    Binding="{Binding ConditionDisplay}"
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColAction}"
                                                    Binding="{Binding ActionDisplay}"
                                                    Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Padding" Value="8,0"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridCheckBoxColumn Header="{x:Static p:Resources.ColEnabled}"
                                                        Binding="{Binding IsEnabled, Mode=OneWay}"
                                                        Width="80">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="IsHitTestVisible" Value="False"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Groups Tab -->
                <TabItem Header="{x:Static p:Resources.TabGroups}" AutomationProperties.Name="{x:Static p:Resources.TabGroups}">
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>

                        <!-- Groups List -->
                        <DataGrid Grid.Column="0"
                                  ItemsSource="{Binding ComputerGroups}"
                                  SelectedItem="{Binding SelectedGroupForEdit}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  SelectionMode="Single"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E0E0E0"
                                  Background="White"
                                  BorderThickness="0"
                                  RowHeight="32"
                                  Margin="0,0,15,0"
                                  AutomationProperties.Name="{x:Static p:Resources.TabGroups}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{x:Static p:Resources.LblGroupName}" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.LblGroupDescription}" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ColTotal}" Binding="{Binding ComputerCount}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Group Management Panel -->
                        <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="15">
                            <StackPanel>
                                <TextBlock Text="{x:Static p:Resources.BtnNewGroup}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,15"/>

                                <TextBlock Text="{x:Static p:Resources.LblGroupName}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewGroupName, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6"
                                         Margin="0,0,0,10"
                                         AutomationProperties.Name="{x:Static p:Resources.LblGroupName}"/>

                                <TextBlock Text="{x:Static p:Resources.LblGroupDescription}"
                                           FontSize="12"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NewGroupDescription, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6"
                                         Margin="0,0,0,15"
                                         Height="60"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         AutomationProperties.Name="{x:Static p:Resources.LblGroupDescription}"/>

                                <Button Content="{x:Static p:Resources.BtnNewGroup}"
                                        Command="{Binding CreateGroupCommand}"
                                        Background="#27AE60"
                                        Style="{StaticResource ActionButtonStyle}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,10"
                                        AutomationProperties.Name="{x:Static p:Resources.BtnNewGroup}"/>

                                <Button Content="{x:Static p:Resources.BtnDeleteGroup}"
                                        Command="{Binding DeleteGroupCommand}"
                                        Background="#E74C3C"
                                        Style="{StaticResource ActionButtonStyle}"
                                        HorizontalAlignment="Stretch"
                                        AutomationProperties.Name="{x:Static p:Resources.BtnDeleteGroup}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- ==================== STATUS BAR ==================== -->
        <Border Grid.Row="1"
                Background="#ECF0F1"
                Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Text -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusText}"
                           FontSize="12"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#5D6D7E"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter Property="Foreground" Value="#3498DB"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Health Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                            ToolTip="{x:Static p:Resources.TooltipHealthIndicator}">
                    <TextBlock Text="{x:Static p:Resources.LblHealthStatus}"
                               FontSize="11"
                               Foreground="#5D6D7E"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <Ellipse Width="10" Height="10" VerticalAlignment="Center"
                             AutomationProperties.Name="{Binding HealthReport.Status, Converter={StaticResource HealthStatusToString}}">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#7B8D8E"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Healthy">
                                        <Setter Property="Fill" Value="#27AE60"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Degraded">
                                        <Setter Property="Fill" Value="#F39C12"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Unhealthy">
                                        <Setter Property="Fill" Value="#E74C3C"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding HealthReport.Status, Converter={StaticResource HealthStatusToString}}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#7B8D8E"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Healthy">
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Degraded">
                                        <Setter Property="Foreground" Value="#F39C12"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HealthReport.Status}" Value="Unhealthy">
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Content="{x:Static p:Resources.BtnRefresh}"
                            Command="{Binding CheckHealthCommand}"
                            Background="Transparent"
                            Foreground="#5D6D7E"
                            BorderThickness="0"
                            Padding="5,2"
                            FontSize="10"
                            Cursor="Hand"
                            Margin="5,0,0,0"
                            AutomationProperties.Name="{x:Static p:Resources.LblHealthStatus}"/>
                </StackPanel>

                <!-- Theme Toggle -->
                <Button Grid.Column="2"
                        Command="{Binding ToggleThemeCommand}"
                        ToolTip="{x:Static p:Resources.TooltipTheme}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"
                        Margin="15,0,0,0"
                        AutomationProperties.Name="{x:Static p:Resources.TooltipTheme}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#x2600;" FontSize="14" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="&#x263D;" FontSize="14" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="{Binding CurrentThemeDisplayName}"
                                   FontSize="11"
                                   Foreground="#5D6D7E"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Toast Notification Container -->
        <ItemsControl Grid.Row="0"
                      Grid.RowSpan="2"
                      ItemsSource="{Binding ToastNotifications}"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Margin="0,0,20,80"
                      Panel.ZIndex="1000">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ToastNotification}">
                    <Border Background="{Binding Type, Converter={StaticResource ToastTypeToColor}}"
                            CornerRadius="6"
                            Padding="12,10"
                            Margin="0,0,0,8"
                            MinWidth="280"
                            MaxWidth="400">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="{Binding Message}"
                                       Foreground="White"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                    Content="&#x2715;"
                                    Command="{Binding DataContext.DismissToastCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Padding="6,2"
                                    Cursor="Hand"
                                    VerticalAlignment="Top"
                                    Opacity="0.8"
                                    ToolTip="{x:Static p:Resources.BtnDismiss}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
