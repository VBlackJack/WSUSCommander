<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryColor">#E0E0E0</Color>
    <Color x:Key="SecondaryColor">#B0B0B0</Color>
    <Color x:Key="AccentColor">#5DADE2</Color>
    <Color x:Key="SuccessColor">#58D68D</Color>
    <Color x:Key="WarningColor">#F5B041</Color>
    <Color x:Key="DangerColor">#EC7063</Color>
    <Color x:Key="InfoColor">#5DADE2</Color>
    <Color x:Key="CriticalColor">#BB8FCE</Color>

    <!-- Accessibility Colors (WCAG AA compliant for dark theme) -->
    <Color x:Key="FocusColor">#FF9F43</Color>
    <Color x:Key="DisabledColor">#6C757D</Color>
    <Color x:Key="DisabledBackgroundColor">#4A4A4A</Color>
    <Color x:Key="ValidationErrorColor">#F1948A</Color>

    <!-- Background Colors -->
    <Color x:Key="WindowBackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardBackgroundColor">#2D2D2D</Color>
    <Color x:Key="BorderColor">#3D3D3D</Color>
    <Color x:Key="HoverBackgroundColor">#383838</Color>

    <!-- Text Colors (improved contrast for WCAG AA) -->
    <Color x:Key="PrimaryTextColor">#E0E0E0</Color>
    <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
    <Color x:Key="MutedTextColor">#909090</Color>

    <!-- Status Bar -->
    <Color x:Key="StatusBarBackgroundColor">#252525</Color>

    <!-- DataGrid Colors -->
    <Color x:Key="DataGridRowBackgroundColor">#2D2D2D</Color>
    <Color x:Key="DataGridAlternateRowColor">#333333</Color>
    <Color x:Key="DataGridSelectedRowColor">#1A4472</Color>
    <Color x:Key="DataGridHeaderBackgroundColor">#252525</Color>
    <Color x:Key="DataGridSupersededRowColor">#3D3020</Color>
    <Color x:Key="DataGridNeedsAttentionRowColor">#3D2020</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}"/>

    <!-- Accessibility Brushes -->
    <SolidColorBrush x:Key="FocusBrush" Color="{StaticResource FocusColor}"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}"/>
    <SolidColorBrush x:Key="ValidationErrorBrush" Color="{StaticResource ValidationErrorColor}"/>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>

    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}"/>

    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="{StaticResource DataGridRowBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridAlternateRowBrush" Color="{StaticResource DataGridAlternateRowColor}"/>
    <SolidColorBrush x:Key="DataGridSelectedRowBrush" Color="{StaticResource DataGridSelectedRowColor}"/>
    <SolidColorBrush x:Key="DataGridHeaderBackgroundBrush" Color="{StaticResource DataGridHeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="DataGridSupersededRowBrush" Color="{StaticResource DataGridSupersededRowColor}"/>
    <SolidColorBrush x:Key="DataGridNeedsAttentionRowBrush" Color="{StaticResource DataGridNeedsAttentionRowColor}"/>

</ResourceDictionary>
