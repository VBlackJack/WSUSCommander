<Window x:Class="WsusCommander.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{x:Static p:Resources.AboutWindowTitle}"
        Height="320"
        Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <StackPanel Margin="24">
        <TextBlock Text="{Binding AppName}" FontSize="20" FontWeight="SemiBold"/>
        <TextBlock Text="{Binding AppVersion}" Margin="0,4,0,16"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{x:Static p:Resources.AboutAuthorLabel}" Width="120"/>
            <TextBlock Text="{Binding Author}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{x:Static p:Resources.AboutLicenseLabel}" Width="120"/>
            <TextBlock Text="{x:Static p:Resources.AboutLicenseValue}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="{x:Static p:Resources.AboutGitHubLabel}" Width="120"/>
            <TextBlock>
                <Hyperlink NavigateUri="{Binding GitHubUri}" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="{Binding GitHubUrl, Mode=OneWay}"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <Button Content="{x:Static p:Resources.BtnClose}" Width="120" HorizontalAlignment="Right" Click="CloseButton_Click" />
    </StackPanel>
</Window>
