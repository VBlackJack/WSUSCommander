<Window x:Class="WsusCommander.Views.RuleEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{x:Static p:Resources.RuleEditorWindowTitle}"
        Height="520"
        Width="620"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{x:Static p:Resources.RuleEditorSectionConditions}" FontSize="16" FontWeight="SemiBold"/>
            <Grid Margin="0,12,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static p:Resources.LblRuleName}" Margin="0,0,12,8"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Rule.Name, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Resources.LblConditionType}" Margin="0,0,12,8"/>
                <ComboBox Grid.Row="1" Grid.Column="1" SelectedValue="{Binding SelectedConditionType}" SelectedValuePath="Content">
                    <ComboBoxItem Content="{x:Static p:Resources.ConditionClassification}"/>
                    <ComboBoxItem Content="{x:Static p:Resources.ConditionProduct}"/>
                </ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static p:Resources.LblConditionValue}" Margin="0,0,12,8"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Rule.ConditionValue, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static p:Resources.RuleEditorLabelEnabled}" Margin="0,0,12,0"/>
                <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding Rule.IsEnabled}"/>
            </Grid>

            <TextBlock Text="{x:Static p:Resources.RuleEditorSectionTargets}" FontSize="16" FontWeight="SemiBold"/>
            <Grid Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static p:Resources.LblTargetGroup}" Margin="0,0,12,8"/>
                <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding TargetGroups}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedGroup}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Resources.RuleEditorLabelDeadlineOffset}" Margin="0,0,12,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Width="80" Text="{Binding DeadlineOffsetDays, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Margin="8,3,0,0" Text="{x:Static p:Resources.RuleEditorDays}"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{x:Static p:Resources.BtnSave}" Width="120" Margin="0,0,8,0"/>
            <Button Content="{x:Static p:Resources.BtnCancel}" Width="120" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
