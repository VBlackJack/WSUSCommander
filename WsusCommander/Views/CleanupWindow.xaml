<Window x:Class="WsusCommander.Views.CleanupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{x:Static p:Resources.CleanupWindowTitle}"
        Height="360"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{x:Static p:Resources.CleanupWindowDescription}"
                   TextWrapping="Wrap"
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1">
            <CheckBox Content="{x:Static p:Resources.CleanupOptionObsoleteUpdates}"
                      IsChecked="{Binding RemoveObsoleteUpdates}"/>
            <CheckBox Content="{x:Static p:Resources.CleanupOptionObsoleteComputers}"
                      IsChecked="{Binding RemoveObsoleteComputers}"/>
            <CheckBox Content="{x:Static p:Resources.CleanupOptionExpiredUpdates}"
                      IsChecked="{Binding RemoveExpiredUpdates}"/>
            <CheckBox Content="{x:Static p:Resources.CleanupOptionCompressRevisions}"
                      IsChecked="{Binding CompressUpdateRevisions}"/>
            <CheckBox Content="{x:Static p:Resources.CleanupOptionUnneededContent}"
                      IsChecked="{Binding RemoveUnneededContent}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{x:Static p:Resources.BtnClose}"
                    Width="90"
                    Margin="0,0,10,0"
                    IsEnabled="{Binding CanInteract}"
                    Click="CloseButton_Click"/>
            <Button Content="{x:Static p:Resources.CleanupRunButton}"
                    Width="120"
                    Command="{Binding RunCleanupCommand}"
                    IsEnabled="{Binding CanInteract}"/>
        </StackPanel>
    </Grid>
</Window>
