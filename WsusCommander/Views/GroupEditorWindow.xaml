<Window x:Class="WsusCommander.Views.GroupEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{x:Static p:Resources.GroupEditorWindowTitle}"
        Height="560"
        Width="780"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Header="{x:Static p:Resources.GroupEditorSectionGroups}" Margin="0,0,16,0">
            <ListBox ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="{x:Static p:Resources.GroupEditorSectionDetails}">
            <StackPanel Margin="12">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.LblGroupName}" Width="140"/>
                    <TextBox Text="{Binding SelectedGroup.Name, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.LblParentGroup}" Width="140"/>
                    <ComboBox ItemsSource="{Binding Groups}" DisplayMemberPath="Name"/>
                </StackPanel>
                <TextBlock Text="{x:Static p:Resources.GroupEditorLabelMembers}" Margin="0,12,0,4"/>
                <ListBox ItemsSource="{Binding GroupMembers}" Height="200"/>
                <TextBlock Text="{x:Static p:Resources.GroupEditorNoMembers}" Foreground="#7f8c8d"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{x:Static p:Resources.BtnNewGroup}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnEditGroup}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnDeleteGroup}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnClose}" Width="120" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
