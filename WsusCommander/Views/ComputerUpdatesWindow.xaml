<Window x:Class="WsusCommander.Views.ComputerUpdatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{Binding WindowTitle}"
        Height="600"
        Width="900"
        MinHeight="400"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Focus Visual Style -->
        <Style x:Key="WindowFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Stroke="#FF6B00" StrokeThickness="2"
                                   RadiusX="4" RadiusY="4" Margin="-2"
                                   SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="{Binding ComputerName}" FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock Text="{Binding Summary}" Foreground="#495057" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Filter Bar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="LblFilter" Text="{x:Static p:Resources.LblFilter}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="FilterCombo"
                      SelectedIndex="0"
                      Width="150"
                      SelectionChanged="FilterCombo_SelectionChanged"
                      FocusVisualStyle="{StaticResource WindowFocusVisual}"
                      AutomationProperties.LabeledBy="{Binding ElementName=LblFilter}">
                <ComboBoxItem Content="{x:Static p:Resources.FilterAll}"/>
                <ComboBoxItem Content="{x:Static p:Resources.FilterNotApproved}"/>
                <ComboBoxItem Content="{x:Static p:Resources.FilterFailed}"/>
            </ComboBox>
            <TextBlock Text="{Binding FilteredCount, StringFormat='({0} items)'}"
                       VerticalAlignment="Center" Margin="15,0,0,0" Foreground="#495057"/>
        </StackPanel>

        <!-- Color Legend -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Rectangle Width="16" Height="16" Fill="#FFF3E0" Stroke="#E0E0E0" StrokeThickness="1" RadiusX="2" RadiusY="2" Margin="0,0,5,0"/>
            <TextBlock Text="{x:Static p:Resources.LegendSuperseded}" FontSize="11" Foreground="#495057" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Rectangle Width="16" Height="16" Fill="#FFEBEE" Stroke="#E0E0E0" StrokeThickness="1" RadiusX="2" RadiusY="2" Margin="0,0,5,0"/>
            <TextBlock Text="{x:Static p:Resources.LegendNeedsAttention}" FontSize="11" Foreground="#495057" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Rectangle Width="16" Height="16" Fill="#E3F2FD" Stroke="#E0E0E0" StrokeThickness="1" RadiusX="2" RadiusY="2" Margin="0,0,5,0"/>
            <TextBlock Text="{x:Static p:Resources.LegendSelected}" FontSize="11" Foreground="#495057" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Updates DataGrid with horizontal scroll -->
        <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <DataGrid x:Name="UpdatesGrid"
                      ItemsSource="{Binding FilteredUpdates}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Extended"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      Background="White"
                      BorderThickness="1"
                      BorderBrush="#E0E0E0"
                      RowHeight="32"
                      HeadersVisibility="Column"
                      AutomationProperties.Name="{x:Static p:Resources.AccessGridUpdates}"
                      FocusVisualStyle="{StaticResource WindowFocusVisual}">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSuperseded}" Value="True">
                            <Setter Property="Background" Value="#FFF3E0"/>
                            <Setter Property="ToolTip" Value="{x:Static p:Resources.TipSuperseded}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding NeedsAttention}" Value="True">
                            <Setter Property="Background" Value="#FFEBEE"/>
                        </DataTrigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static p:Resources.ColTitle}"
                                    Binding="{Binding Title}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Title}"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static p:Resources.ColKB}"
                                    Binding="{Binding KbArticle}"
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static p:Resources.ColClassification}"
                                    Binding="{Binding Classification}"
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static p:Resources.ColStatus}"
                                    Binding="{Binding InstallationStateDisplay}"
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFailed}" Value="True">
                                    <Setter Property="Foreground" Value="#E74C3C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static p:Resources.ColApprovalStatus}"
                                    Binding="{Binding ApprovalStatusDisplay}"
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ApprovalStatusDisplay}" Value="NotApproved">
                                    <Setter Property="Foreground" Value="#E67E22"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="{x:Static p:Resources.LblSuperseded}"
                                        Binding="{Binding IsSuperseded, Mode=OneWay}"
                                        Width="80"
                                        IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{x:Static p:Resources.BtnClose}"
                    Click="CloseButton_Click"
                    MinWidth="80"
                    MinHeight="36"
                    Padding="15,8"
                    Background="#6C757D"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsCancel="True"
                    FocusVisualStyle="{StaticResource WindowFocusVisual}"
                    AutomationProperties.Name="{x:Static p:Resources.BtnClose}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
