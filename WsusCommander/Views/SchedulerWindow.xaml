<Window x:Class="WsusCommander.Views.SchedulerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WsusCommander.Properties"
        Title="{x:Static p:Resources.SchedulerWindowTitle}"
        Height="560"
        Width="820"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Header="{x:Static p:Resources.SchedulerHeaderTasks}" Margin="0,0,16,0">
            <DataGrid ItemsSource="{Binding Tasks}" AutoGenerateColumns="False" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static p:Resources.SchedulerLabelName}" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="{x:Static p:Resources.SchedulerLabelNextRun}" Binding="{Binding NextRun}" />
                    <DataGridCheckBoxColumn Header="{x:Static p:Resources.SchedulerLabelEnabled}" Binding="{Binding IsEnabled}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="{x:Static p:Resources.SchedulerHeaderDetails}">
            <StackPanel Margin="12">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.SchedulerLabelName}" Width="160"/>
                    <TextBox Text="{Binding SelectedTask.Name, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.SchedulerLabelType}" Width="160"/>
                    <ComboBox SelectedValue="{Binding SelectedTaskType}" SelectedValuePath="Content">
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerTaskApproval}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerTaskCleanup}"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.SchedulerLabelRecurrence}" Width="160"/>
                    <ComboBox SelectedValue="{Binding SelectedRecurrence}" SelectedValuePath="Content">
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerRecurrenceOnce}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerRecurrenceDaily}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerRecurrenceWeekly}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerRecurrenceMonthly}"/>
                        <ComboBoxItem Content="{x:Static p:Resources.SchedulerRecurrenceInterval}"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.SchedulerLabelInterval}" Width="160"/>
                    <TextBox Width="80" Text="{Binding IntervalMinutes, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Margin="8,3,0,0" Text="{x:Static p:Resources.SchedulerMinutes}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static p:Resources.SchedulerLabelEnabled}" Width="160"/>
                    <CheckBox IsChecked="{Binding SelectedTask.IsEnabled}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{x:Static p:Resources.BtnAddTask}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnEditTask}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnDeleteTask}" Margin="0,0,8,0" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnClose}" Width="120" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
