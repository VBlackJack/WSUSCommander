{
  "WsusConnection": {
    "ServerName": "localhost",
    "Port": 8530,
    "UseSsl": false,
    "ValidateCertificate": true,
    "CertificateThumbprint": "",
    "TimeoutSeconds": 30
  },
  "AppSettings": {
    "AutoRefreshInterval": 300,
    "LogPath": "C:\\ProgramData\\WsusCommander\\logs",
    "DataPath": "C:\\ProgramData\\WsusCommander\\data",
    "MaxResultsPerQuery": 100,
    "AllComputersGroupName": "All Computers",
    "UnassignedComputersGroupName": "Unassigned Computers"
  },
  "Security": {
    "RequireAuthentication": true,
    "AdministratorGroups": [ "WSUS Administrators", "Domain Admins" ],
    "OperatorGroups": [ "WSUS Operators" ],
    "RequireApprovalConfirmation": true,
    "RequireDeclineConfirmation": true,
    "RequireSyncConfirmation": false,
    "AuditAllOperations": true,
    "EncryptSensitiveLogs": false,
    "SessionTimeoutMinutes": 30,
    "MaxFailedAttempts": 5
  },
  "Logging": {
    "Level": "Info",
    "Format": "Plain",
    "MaxFileSizeMB": 10,
    "RetentionDays": 90,
    "IncludeSensitiveData": false
  },
  "Performance": {
    "CacheTtlSeconds": 300,
    "MaxConcurrentOperations": 3,
    "OperationTimeoutSeconds": 60,
    "MaxRetryAttempts": 3,
    "InitialRetryDelayMs": 500,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerTimeoutSeconds": 60,
    "HealthCheckIntervalMs": 60000
  },
  "PowerShell": {
    "ExecutablePath": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "ExecutionPolicy": "RemoteSigned",
    "TimeoutSeconds": 300,
    "JsonDepth": 10
  },
  "UI": {
    "WindowStartupMode": "Normal",
    "AutoRefreshDefault": false,
    "Theme": "Light",
    "ShowTooltips": true,
    "DefaultPageSize": 50
  },
  "Email": {
    "SmtpServer": "",
    "SmtpPort": 587,
    "UseSsl": true,
    "FromAddress": "",
    "ToAddresses": [],
    "Enabled": false,
    "CriticalUpdateThresholdDays": 7,
    "ComplianceThresholdPercent": 90
  }
}
